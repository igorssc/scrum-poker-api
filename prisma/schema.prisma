generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum StatusRoom {
  OPEN
  CLOSED
}

model User {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  roomsOwner Room[]
  rooms      Member[]

  @@map("users")
}

model Room {
  id         String     @id @default(uuid())
  name       String
  ownerId    String
  created_at DateTime   @default(now())
  status     StatusRoom
  lat        Float?
  lng        Float?

  owner   User     @relation(fields: [ownerId], references: [id])
  members Member[]

  @@map("rooms")
}

model Member {
  id       String @id @default(uuid())
  memberId String
  roomId   String

  member User @relation(fields: [memberId], references: [id])
  room   Room @relation(fields: [roomId], references: [id])

  @@map("members")
}
